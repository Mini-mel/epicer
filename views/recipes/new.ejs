<%layout("layouts/boilerplate");%>
<main class="form-main">
    <div class="form-card">
        <form class="form-content" action="/recipes" method="POST">
            <h1>Add New Recipe</h1>
            <div class="form-field">
                <label for="title">Title</label><br>
                <input type="text" id="title" class="not-ingredients" name="recipe[title]" aria-label="title" required>
            </div>

            <div class="form-field">
                <label for="instructions">Instructions</label><br>
                <input type="text" id="instructions" class="not-ingredients" name="recipe[instructions]"
                    aria-label="instructions" required>
            </div>

            <div class="form-field">
                <label for="image">Image Url</label><br>
                <input type="url" id="image" name="recipe[image]" aria-label="image url" required>
            </div>

            <div class="form-field">
                <button type="button" class="add-field-button" id="addFieldButton" onclick="addField();">Add
                    Ingredient</button><br>
                <label for="ingredients">Ingredients</label><br>

                <div id="add-field-div">

                </div>

                <button class="center-button">Submit</button>
        </form>
    </div>
</main>

<script src="/scripts/addField.js"></script>