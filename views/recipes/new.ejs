<%layout("layouts/boilerplate");%>
<main class="form-main">
    <div class="form-card">
        <form class="form-content" action="/recipes" method="POST">
            <h1>Add New Recipe</h1>
            <div class="form-field">
                <label for="title">Title</label><br>
                <input type="text" id="title" name="recipe[title]" aria-label="title" required>
            </div>

            <div class="form-field">
                <label for="instructions">Instructions</label><br>
                <input type="text" id="instructions" name="recipe[instructions]" aria-label="instructions" required>
            </div>

            <div class="form-field">
                <label for="image">Image Url</label><br>
                <input type="url" id="image" name="recipe[image]" aria-label="image url" required>
            </div>

            <div class="center-button"><button>Submit</button></div>
        </form>
    </div>
</main>